@model Slider
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="~/assets/images/@Model.ImageUrl" />
        </div>
        <div class="col-6">
            <a asp-controller="Slider" asp-action="Index" class="btn btn-warning">Go Back</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Update Image
                    </p>
                    <form class="forms-sample" method="Post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label asp-for="Photo">Description</label>
                            <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Description" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <button class="btn btn-light">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
