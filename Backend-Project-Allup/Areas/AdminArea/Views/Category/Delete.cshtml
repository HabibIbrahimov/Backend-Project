@model Backend_Project_Allup.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsMain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsMain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFeature)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFeature)
        </dd>

        <dt class="col-sm-2">
            Main Category
        </dt>
        @if (Model.IsMain)
        {
            <dd class="col-sm-2">
                This is main Category
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MainCategory.Name)
            </dd>

        }
        @if (Model.IsMain)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Photo)
            </dt>
            <dd class="col-sm-10">
                <img src="~/assets/images/@Html.DisplayFor(model => model.PhotoUrl)" style="width:200px;height:200px" alt="Alternate Text" />
            </dd>
        }

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

