@model List<BasketProduct>
@{
    ViewData["Title"] = "ShowBasket";
    double Total = 0;
}

<div class="container">
    <div class="row">
        @if (TempData["Success"] != null)
        {
            <div id="successAlert" class="alert alert-success">@TempData["Success"]</div>
        }

    </div>
</div>


<div class="container">
    <div class="row">
        @if (TempData["Fail"] != null)
        {
            <div id="successAlert" class="alert alert-success">@TempData["Fail"]</div>
        }

    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.Count != 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th>TotalPrice</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        double total = item.Price * item.Quantity;
                        Total += total;
                        <tr>
                            <th scope="row">
                                <img style="width:150px;height:150px" src="~/assets/images/product/@item.Photo" />
                            </th>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@total</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>TotalPrice:@Total</p>
        }

        else
        {
            <a asp-controller="Home" asp-action="Index">Got to Home</a>
        }
    </div>

    <div style="" class="row">
        <form action="Sale" method="post">
            <button class="btn btn-outline-primary">Buy Now..</button>
        </form>
    </div>
</div>




@section Scripts{


    <script>
        let successAlert = document.getElementById("successAlert");
        setTimeout(() => {
            successAlert.remove();
        }, 3000)
    </script>


    <script>
        let successAlert = document.getElementById("successAlert");
        setTimeout(() => {
            successAlert.remove();
        }, 2000)
    </script>

}