@model LoginVm
@{
    ViewData["Title"] = "Login";
}

<!--====== Login Part Start ======-->

<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <div class="alert alert-danger"asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <div class="single-form">
                            <input asp-for="UserName" placeholder="Username or email *">
                            <span asp-validation-for="UserName" class="text text-danger"></span>
                        </div>
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Password *">
                            <span asp-validation-for="Password" class="text text-danger"></span>
                        </div>
                       
                        <div class="single-form">
                            <button class="main-btn main-btn-2">Login</button>
                        </div>
                    </form>
                    <p class="mt-20"><a asp-controller="Account"asp-action="ForgetPassword">Lost your password?</a></p>
                    <p class="mt-10">No account? <a asp-controller="Account"asp-action="Register">Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Part Ends ======-->
